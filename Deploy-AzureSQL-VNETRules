{
  "displayName": "Azure SQL: Enforce VNet Rules",
  "policyType": "Custom",
  "mode": "All",
  "description": "Enforce a specific subnet in Azure SQL Server VNet rules.",
  "metadata": {
    "version": "1.0.0",
    "category": "SQL"
  },
  "parameters": {
    "subnetId": {
      "type": "String",
      "metadata": {
        "displayName": "Subnet ID",
        "description": "Resource ID of the required subnet (e.g., tenant-wide VDI subnet)."
      }
    }
  },
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Sql/servers"
        },
        {
          "field": "Microsoft.Sql/servers/virtualNetworkRules[*].virtualNetworkSubnetId",
          "notContains": "[parameters('subnetId')]"
        }
      ]
    },
    "then": {
      "effect": "deployIfNotExists",
      "details": {
        "type": "Microsoft.Sql/servers/virtualNetworkRules",
        "roleDefinitionIds": [
          "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
        ],
        "deployment": {
          "properties": {
            "mode": "incremental",
            "template": {
              "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
              "contentVersion": "1.0.0.0",
              "resources": [
                {
                  "type": "Microsoft.Sql/servers/virtualNetworkRules",
                  "apiVersion": "2021-11-01",
                  "name": "[concat(field('name'), '/enforced-vnet-rule')]",
                  "properties": {
                    "virtualNetworkSubnetId": "[parameters('subnetId')]",
                    "ignoreMissingVnetServiceEndpoint": false
                  }
                }
              ]
            }
          }
        }
      }
    }
  }
}
