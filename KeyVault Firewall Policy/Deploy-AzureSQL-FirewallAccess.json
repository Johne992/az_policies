{
  "displayName": "Azure SQL: Allow Azure Services & Public Network Access",
  "policyType": "Custom",
  "mode": "All",
  "description": "Ensure Azure services can bypass the firewall and public access is restricted.",
  "metadata": {
    "version": "1.0.0",
    "category": "SQL"
  },
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Sql/servers"
        },
        {
          "anyOf": [
            {
              "field": "Microsoft.Sql/servers/publicNetworkAccess",
              "notEquals": "Enabled"
            },
            {
              "count": {
                "field": "Microsoft.Sql/servers/firewallRules[*]",
                "where": {
                  "allOf": [
                    {
                      "field": "name",
                      "like": "AllowAllWindowsAzureIps"
                    },
                    {
                      "field": "startIpAddress",
                      "equals": "0.0.0.0"
                    },
                    {
                      "field": "endIpAddress",
                      "equals": "0.0.0.0"
                    }
                  ]
                }
              },
              "less": 1
            }
          ]
        }
      ]
    },
    "then": {
      "effect": "deployIfNotExists",
      "details": {
        "type": "Microsoft.Sql/servers",
        "roleDefinitionIds": [
          "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
        ],
        "deployment": {
          "properties": {
            "mode": "incremental",
            "template": {
              "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
              "contentVersion": "1.0.0.0",
              "resources": [
                {
                  "type": "Microsoft.Sql/servers",
                  "apiVersion": "2021-11-01",
                  "name": "[field('name')]",
                  "properties": {
                    "publicNetworkAccess": "Enabled"
                  }
                },
                {
                  "type": "Microsoft.Sql/servers/firewallRules",
                  "apiVersion": "2021-11-01",
                  "name": "[concat(field('name'), '/AllowAllWindowsAzureIps')]",
                  "properties": {
                    "startIpAddress": "0.0.0.0",
                    "endIpAddress": "0.0.0.0"
                  }
                }
              ]
            }
          }
        }
      }
    }
  }
}
