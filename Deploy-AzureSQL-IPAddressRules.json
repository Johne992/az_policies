{
  "properties": {
    "displayName": "Enforce SQL Server IP firewall rules",
    "description": "Deploys required IP range rules",
    "mode": "All",
    "parameters": {
      "startIpAddress": {
        "type": "String",
        "metadata": {
          "displayName": "Start IP Address",
          "description": "First IP in required range"
        }
      },
      "endIpAddress": {
        "type": "String",
        "metadata": {
          "displayName": "End IP Address",
          "description": "Last IP in required range"
        }
      },
      "ruleName": {
        "type": "String",
        "defaultValue": "approved-ip-range",
        "metadata": {
          "displayName": "Rule Name",
          "description": "Name for the firewall rule"
        }
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Sql/servers"
      },
      "then": {
        "effect": "DeployIfNotExists",
        "details": {
          "type": "Microsoft.Sql/servers/firewallRules",
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
          ],
          "deployment": {
            "properties": {
              "mode": "incremental",
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "resources": [
                  {
                    "type": "Microsoft.Sql/servers/firewallRules",
                    "apiVersion": "2023-05-01-preview",
                    "name": "[concat(parameters('ruleName'), '-', uniqueString(parameters('startIpAddress'), parameters('endIpAddress')))]",
                    "properties": {
                      "startIpAddress": "[parameters('startIpAddress')]",
                      "endIpAddress": "[parameters('endIpAddress')]"
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  }
}
