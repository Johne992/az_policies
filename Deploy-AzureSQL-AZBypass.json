{
  "properties": {
    "displayName": "Audit Azure Services bypass",
    "description": "Audits if Azure services bypass is enabled",
    "mode": "Indexed",
    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Sql/servers"
      },
      "then": {
        "effect": "AuditIfNotExists",
        "details": {
          "type": "Microsoft.Sql/servers/firewallRules",
          "existenceCondition": {
            "allOf": [
              {
                "field": "Microsoft.Sql/servers/firewallRules/name",
                "like": "AllowAllWindowsAzureIps"
              },
              {
                "field": "Microsoft.Sql/servers/firewallRules/startIpAddress",
                "equals": "0.0.0.0"
              },
              {
                "field": "Microsoft.Sql/servers/firewallRules/endIpAddress",
                "equals": "0.0.0.0"
              }
            ]
          }
        }
      }
    }
  }
}
