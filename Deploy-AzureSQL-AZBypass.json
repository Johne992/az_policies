{
  "mode": "All",
  "policyRule": {
    "if": {
      "allOf": [
        { "field": "type", "equals": "Microsoft.Sql/servers" },
        {
          "count": {
            "field": "Microsoft.Sql/servers/firewallRules[*]",
            "where": {
              "allOf": [
                { "field": "name", "equals": "AllowAllWindowsAzureIps" },
                { "field": "startIpAddress", "equals": "0.0.0.0" },
                { "field": "endIpAddress", "equals": "0.0.0.0" }
              ]
            }
          },
          "less": 1
        }
      ]
    },
    "then": {
      "effect": "deployIfNotExists",
      "details": {
        "type": "Microsoft.Sql/servers/firewallRules",
        "roleDefinitionIds": ["/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"],
        "deployment": {
          "properties": {
            "mode": "incremental",
            "template": {
              "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
              "contentVersion": "1.0.0.0",
              "resources": [
                {
                  "type": "Microsoft.Sql/servers/firewallRules",
                  "apiVersion": "2023-05-01-preview",
                  "name": "[concat(field('name'), '/AllowAllWindowsAzureIps')]",
                  "properties": {
                    "startIpAddress": "0.0.0.0",
                    "endIpAddress": "0.0.0.0"
                  }
                }
              ]
            }
          }
        }
      }
    }
  }
}
